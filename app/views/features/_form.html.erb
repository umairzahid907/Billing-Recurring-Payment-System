<%= form_with(model: [@plan, feature], local: true) do |form| %>
  <% if feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
      <% feature.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price %>
  </div>

  <div class="field">
    <%= form.label :max_unit_limit %>
    <%= form.number_field :max_unit_limit %>
  </div>

  <div class="field">
    <%= form.hidden_field :plan_id, value: @plan.id %>
  </div>

  <div class="actions">
    <%= form.submit 'submit'%>
  </div>
<% end %>
